@model Customer
<div class="bg-pimary m-1 p-1 text-white"><h4>Edycja użytkownika</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Imie</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Nazwisko</label>
        <input class="form-control" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="City">Miasto</label>
        <input class="form-control" asp-for="City" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-danger">Anuluj</a>
</form>
