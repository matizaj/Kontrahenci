@model Customer

<div class="bg-pimary m-1 p-1 text-white"><h4>Tworzenie użytkownika</h4></div>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Imie</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Nazwisko</label>
        <input class="form-control" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="City">Miasto</label>
        <input class="form-control" asp-for="City" />
    </div>

    <button type="submit" class="btn btn-success">Utwórz</button>
    <a asp-action="Index" class="btn btn-danger">Anuluj</a>
</form>
