@model IEnumerable<AppUser>

<div class="bg-pimary m-1 p-1 text-white"><h4>Konta użytkowników</h4></div>
<table class="table table-sm">
    <tr><th>Nazwa użytkownika</th><th>Email</th><th>Akcja</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Brak użytkowników</td></tr>
    }
    else
    {
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@user.Id">Edytuj</a>
                    <button type="submit"  class="btn btn-danger">Usuń</button>
                </form>
            </td>
        </tr>
        }
    }
</table>
<a class="btnbtn-primary" asp-action="Create">Dodaj użytkownika</a>