@model CreateModel

<div class="bg-pimary m-1 p-1 text-white"><h4>Tworzenie użytkownika</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" method="post">
    <div class="form-group">  
        <label asp-for="Name">Nazwa</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input class="form-control" asp-for="Password" />
    </div>
    <button type="submit" class="btn btn-success">Utwórz</button>
    <a asp-action="Index" class="btn btn-danger">Anuluj</a>
</form>